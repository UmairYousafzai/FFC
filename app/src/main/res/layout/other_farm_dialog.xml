<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xmnls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:orientation="vertical"
        xmnls:layout_constraintStart_toStartOf="parent"
        xmnls:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_farm_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:hint="name"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:startIconTint="@color/APP_Theme_Color"
            xmnls:boxBackgroundColor="@color/white"
            xmnls:hintTextColor="@color/APP_Theme_Color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_farm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/APP_Theme_Color" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_farm_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:hint="Address"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/APP_Theme_Color"
            tools:ignore="MissingConstraints"
            xmnls:boxBackgroundColor="@color/white"
            xmnls:hintTextColor="@color/APP_Theme_Color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_farm_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/APP_Theme_Color" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/add"
            android:textColor="@color/APP_Theme_Color"
            app:backgroundTint="@color/white"
            android:layout_gravity="center"
            app:strokeColor="@color/APP_Theme_Color"
            app:strokeWidth="1dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>