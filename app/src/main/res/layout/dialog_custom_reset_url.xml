<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_forgot_password"
    >

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textColor="@color/APP_Theme_Color"
        android:background="@drawable/bg_close_button"
        />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/img_erp_cloud_logo"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/heading_reset_server"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="Reset Server URL"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:id="@+id/text_reset_server"
        android:layout_below="@+id/heading_reset_server"
        android:layout_centerHorizontal="true"
        android:text="Enter your Server URL below to reset url"
        android:gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/reset_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_reset_server"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        app:errorEnabled="true"
        app:errorIconTint="@color/red"
        app:errorTextColor="@color/red"
        app:boxStrokeErrorColor="@color/red"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_button"
        android:layout_below="@id/reset_edit_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="RESET"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/offwhite_color"
        app:strokeColor="@color/APP_Theme_Color"
        app:strokeWidth="1dp"
        android:textColor="@color/APP_Theme_Color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="13sp"
        app:rippleColor="@color/APP_Theme_Color"
        />
</RelativeLayout>