<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_marginVertical="7dp"
    android:padding="5dp"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/route_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_top_curve"
                android:backgroundTint="@color/APP_Theme_Color"
                >
                <TextView
                    android:id="@+id/main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MainACtivity"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/activity_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="activityid"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/taskid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TaskID"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/APP_Theme_Color"
                    android:layout_marginEnd="20dp"

                    />

                <TextView
                    android:id="@+id/sub_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Actiivity"
                    android:layout_alignParentStart="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/APP_Theme_Color"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:10"
                android:layout_marginVertical="5dp"
                android:textColor="@color/APP_Theme_Color"
                android:layout_marginStart="20dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:10"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/APP_Theme_Color"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <TextView
                android:id="@+id/start_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3525645551"
                android:layout_marginVertical="5dp"
                android:textColor="@color/APP_Theme_Color"
                android:layout_marginStart="20dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <TextView
                android:id="@+id/end_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="545241351353"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/APP_Theme_Color"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <TextView
                android:id="@+id/start_location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MainACtivity"
                android:layout_marginHorizontal="20dp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textColor="@color/APP_Theme_Color"
                android:layout_marginVertical="5dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />

            <TextView
                android:id="@+id/end_location_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MainACtivity"
                android:layout_marginHorizontal="20dp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textColor="@color/APP_Theme_Color"
                android:layout_marginVertical="5dp"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shecdule_bottom"
                android:backgroundTint="@color/APP_Theme_Color"
                >
                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tottal time"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="distance"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
