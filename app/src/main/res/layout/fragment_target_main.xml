<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2595C7DF"

        >


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/bg_header_target">

            <TextView
                android:id="@+id/startDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:ellipsize="none"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical|center_horizontal"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@string/start_day"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/show_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show Activities"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                />


        </RelativeLayout>

        <GridLayout
            android:layout_centerVertical="true"
            android:id="@+id/mainGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_70sdp"
            android:columnCount="2"
            android:rowCount="2">


            <androidx.cardview.widget.CardView

                android:id="@+id/target_card"

                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_cardviews_target"
                app:cardCornerRadius="5dp"

                app:cardElevation="8dp">




                <LinearLayout
                    android:id="@+id/nav_to_target"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_cardviews_target"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/target"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/ic_interview_svgrepo_com" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_8sdp"
                            android:text="@string/targets"
                            android:textColor="@color/slategray"
                            android:textSize="@dimen/_15sdp" />





                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView

                android:id="@+id/local_travel_card"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_cardviews_target"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">




                <LinearLayout
                    android:id="@+id/nav_to_localTravel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_cardviews_target"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/localtravel"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_bus_front_svgrepo_com" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_8sdp"
                            android:text="@string/LocalTravel"
                            android:textColor="@color/slategray"
                            android:textSize="@dimen/_15sdp" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/private_travel_card"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_cardviews_target"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">




                <LinearLayout
                    android:id="@+id/nav_to_privateTravel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_cardviews_target"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/privatetravel"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"

                        android:src="@drawable/ic_iconmonstr_car_3" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_8sdp"
                            android:text="@string/PrivateTravel"
                            android:textColor="@color/slategray"
                            android:textSize="@dimen/_15sdp" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:id="@+id/office_card"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">




                <LinearLayout
                    android:id="@+id/nav_to_office"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_cardviews_target"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/office"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/ic_office_block_urban_svgrepo_com" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_8sdp"
                            android:text="@string/Office"
                            android:textColor="@color/slategray"
                            android:textSize="@dimen/_15sdp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </RelativeLayout>


</RelativeLayout>