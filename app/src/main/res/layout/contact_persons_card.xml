<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="contactPerson"
            type="com.example.ffccloud.ContactPersons" />
    </data>

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/APP_Theme_Color"
        android:layout_margin="8dp"
        android:padding="5dp"
        app:strokeColor="@color/APP_Theme_Color"
        app:strokeWidth="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            >
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:background="@android:color/transparent"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="4dp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{contactPerson.contact_Person_Name}"
                android:background="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{contactPerson.contact_Person_Design}"
                android:background="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_phone_numer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{contactPerson.contact_Person_ContactNo}"
                android:background="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{contactPerson.contact_Person_Email}"
                android:background="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:textSize="14sp"
                />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>