<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2595C7DF">

    <LinearLayout
        android:id="@+id/linear_system_suggested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_shadow"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/APP_Theme_Color"
        android:layout_marginHorizontal="15dp"
        >

        <TextView
            android:id="@+id/text_system_suggested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_suggested"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="9dp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:id="@+id/inner_text_system_suggested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/here_system_would_suggest_you_the_work_plan_for_a_specified_day_for_current_day_system_automatically_make_work_plan_for_you"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginEnd="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="5dp"
            />
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_forward_arrow"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:contentDescription="@string/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_work_plan"
        android:layout_below="@+id/linear_system_suggested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_shadow"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:backgroundTint="@color/APP_Theme_Color">

        <TextView
            android:id="@+id/text_work_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/work_plan"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="9dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:id="@+id/inner_text_work_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/here_you_can_find_the_work_plan_that_you_set_for_a_specified_date_and_time_this_work_plan_would_not_be_system_suggested"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginEnd="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="5dp"
            />
        <ImageButton
            android:id="@+id/btn_next2"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_forward_arrow"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            />

    </LinearLayout>


</RelativeLayout>