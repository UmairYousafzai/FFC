<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_forgot_password"
    >

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textColor="@color/APP_Theme_Color"
        android:background="@drawable/bg_close_button"
        />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/img_erp_cloud_logo"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/heading_config_imei"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="Configure your device"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:id="@+id/text_config_imei"
        android:layout_below="@+id/heading_config_imei"
        android:layout_centerHorizontal="true"
        android:text="Here is device IMEI number"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/text_imei_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_config_imei"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:errorEnabled="true"
        android:text="IMEI"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/APP_Theme_Color"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:padding="5dp"
        />

    <com.google.android.material.button.MaterialButton
        android:visibility="invisible"
        android:id="@+id/set_imei_button"
        android:layout_below="@id/text_imei_number"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="VERIFY"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/offwhite_color"
        app:strokeColor="@color/APP_Theme_Color"
        app:strokeWidth="1dp"
        android:textColor="@color/APP_Theme_Color"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="13sp"
        app:rippleColor="@color/APP_Theme_Color"
        />
</RelativeLayout>